assign [class="Lightscreen" title="Lightscreen"] $ws6
assign [class="Skype"] $ws6
assign [class="Thunderbird"] $ws7

assign [class="jetbrains-idea" title="Documentation"] $ws5

workspace $ws1 output $mon1
workspace $ws2 output $mon1
workspace $ws4 output $mon2
workspace $ws5 output $mon2
workspace $ws6 output $mon2
workspace $ws7 output $mon2

exec zsh -c "~/.i3/setupWorkspace.sh"
