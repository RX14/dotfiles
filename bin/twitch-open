#!/bin/bash
i3-msg 'workspace 9; split v'
background livestreamer --player "/usr/bin/vlc --qt-minimal-view" twitch.tv/$1 source
background chromium --app=https://twitch.tv/$1/chat
wait-for-window "VLC"
wait-for-window " - Twitch"
i3-msg '[class="Vlc" instance="vlc"] focus; move up; resize grow height 0 px or 20 ppt'
